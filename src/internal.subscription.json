{
  "$schema": "https://dev.songe.li/gkd/subscription.schema.json?CDN_302=OFF",
  "version": 1,
  "author": "lisonge <i@songe.li> (https://github.com/lisonge)",
  "app_list": [
    {
      "package_name": "com.zhihu.android",
      "rule_group_list": [
        {
          "key": 0,
          "class_name": "com.zhihu.android.mix.activity.ContentMixProfileActivity",
          "description": "知乎回答页面-文章底部-卡片广告",
          "rule_list": [
            {
              "selector": "View[text$=的广告] - View[text=×]"
            },
            {
              "selector": "TextView[text*=的广告] - Image"
            },
            {
              "selector": "View[text$=的广告] + View[text=×]"
            },
            {
              "selector": "View[text$=的广告] +2 View[text=×]"
            },
            {
              "selector": "TextView[text=了解更多] > TextView[text=×]"
            },
            {
              "selector": "TextView[text=限时解锁] +2 Image",
              "description": "盐选会员推荐"
            }
          ]
        },
        {
          "key": 1,
          "class_name": "com.zhihu.android.mix.activity.ContentMixProfileActivity",
          "description": "知乎回答页面-文章底部-文章推荐",
          "rule_list": [
            {
              "selector": "View[text$=关注][text*=回答] + View[text=×]"
            },
            {
              "selector": "View[text*=的回答][text*=点赞][text$=评论] + TextView + Image"
            },
            {
              "selector": "TextView[text*=赞同][text$=评论][text*=·] + TextView[text$=专题精选] + View[text=×]"
            }
          ]
        },
        {
          "key": 2,
          "class_name": "com.zhihu.android.ContentActivity",
          "description": "题目概览页面-回答列表-广告",
          "rule_list": [
            {
              "selector": "TextView[id=com.zhihu.android:id/confirm_uninterest]",
              "description": "确认关闭广告按钮"
            },
            {
              "selector": "TextView[id=com.zhihu.android:id/uninterest_reason]",
              "description": "不感兴趣理由按钮"
            },
            {
              "selector": "ViewGroup > TextView[text*=广告] +4 ImageView",
              "description": "广告关闭按钮-1"
            },
            {
              "selector": "ViewGroup > TextView[text*=广告] +2 ImageView",
              "description": "广告关闭按钮-2"
            }
          ]
        }
      ]
    },
    {
      "package_name": "com.baidu.tieba",
      "rule_group_list": [
        {
          "class_name": "com.baidu.tieba.tblauncher.MainTabActivity",
          "description": "首页-推荐-帖子列表-推荐广告",
          "rule_list": [
            {
              "selector": "View[id=com.baidu.tieba:id/forbid_thread_btn]",
              "description": "选择不喜欢理由右边-不感兴趣"
            },
            {
              "selector": "FrameLayout[id=com.baidu.tieba:id/ad_close_view]",
              "description": "广告卡片区右上角的x"
            }
          ]
        },
        {
          "description": "浮动广告",
          "rule_list": [
            {
              "selector": "ImageView[id=com.baidu.tieba:id/float_layer_feedback_picture]",
              "class_name": "com.baidu.tieba.tblauncher.MainTabActivity",
              "description": "首页-浮动广告"
            },
            {
              "selector": "ImageView[id=com.baidu.tieba:id/float_layer_feedback_picture]",
              "class_name": "com.baidu.tieba.pb.pb.main.PbActivity",
              "description": "帖子页面-浮动广告"
            }
          ]
        },
        {
          "class_name": "com.baidu.tieba.pb.pb.main.PbActivity",
          "description": "帖子页面-文章底部-推荐卡片-直播",
          "rule_list": [
            {
              "selector": "TextView[id=com.baidu.tieba:id/head_text] + View[id=com.baidu.tieba:id/uninterested_btn]"
            },
            {
              "selector": "ImageView[id=com.baidu.tieba:id/coverView] + TextView[id=com.baidu.tieba:id/alaStateView] + TextView[id=com.baidu.tieba:id/descView] + RelativeLayout + ImageView"
            }
          ]
        },
        {
          "class_name": "com.baidu.tieba.pb.pb.main.PbActivity",
          "description": "帖子页面-评论区-推荐广告",
          "rule_list": [
            {
              "selector": "View[id=com.baidu.tieba:id/forbid_thread_btn]",
              "description": "不感兴趣按钮"
            },
            {
              "selector": "FrameLayout[id=com.baidu.tieba:id/ad_close_view]",
              "description": "广告关闭按钮"
            }
          ]
        },
        {
          "class_name": "com.baidu.tieba.tblauncher.MainTabActivity",
          "description": "首页-顶部广告卡片",
          "rule_list": [
            {
              "selector": "RelativeLayout[id=com.baidu.tieba:id/close_layout]"
            }
          ]
        }
      ]
    },
    {
      "package_name": "com.tencent.mm",
      "rule_group_list": [
        {
          "class_name": "com.tencent.mm.plugin.sns.ui.SnsTimeLineUI",
          "description": "朋友圈-广告卡片",
          "rule_list": [
            {
              "selector": "TextView[id=com.tencent.mm:id/hus][text=选择后将减少该类推荐] + TextView[id=com.tencent.mm:id/hui][text=确认]"
            },
            {
              "selector": "TextView[id=com.tencent.mm:id/hus][text=选择后将减少该类推荐] + FrameLayout[id=com.tencent.mm:id/huj] > ViewGroup[id=com.tencent.mm:id/hul] > TextView[text=直接关闭]"
            },
            {
              "selector": "TextView[id=com.tencent.mm:id/hus][text*=广告] + FrameLayout[id=com.tencent.mm:id/huj] > LinearLayout[id=com.tencent.mm:id/hum] > LinearLayout[id=com.tencent.mm:id/hue] + LinearLayout[id=com.tencent.mm:id/hup]"
            },
            {
              "selector": "LinearLayout > LinearLayout[id=com.tencent.mm:id/fzb][childCount=2] > TextView[id=com.tencent.mm:id/fzg] + LinearLayout[id=com.tencent.mm:id/fj][childCount=0]"
            }
          ]
        }
      ]
    },
    {
      "package_name": "tv.danmaku.bili",
      "rule_group_list": [
        {
          "class_name": "tv.danmaku.bili.MainActivityV2",
          "description": "启动页-开屏广告",
          "rule_list": [
            {
              "selector": "TextView[id=tv.danmaku.bili:id/count_down]"
            }
          ]
        },
        {
          "class_name": "tv.danmaku.bili.ui.video.VideoDetailsActivity",
          "description": "视频播放页-评论区顶部-公告或推荐",
          "rule_list": [
            {
              "selector": "ImageView[id=tv.danmaku.bili:id/close]"
            }
          ]
        }
      ]
    },
    {
      "package_name": "com.duokan.phone.remotecontroller",
      "rule_group_list": [
        {
          "class_name": "com.xiaomi.mitv.phone.remotecontroller.HoriWidgetMainActivityV2",
          "description": "首页-底部推荐卡片",
          "rule_list": [
            {
              "selector": "ImageView[id=com.duokan.phone.remotecontroller:id/image_close_banner]"
            }
          ]
        }
      ]
    }
  ]
}